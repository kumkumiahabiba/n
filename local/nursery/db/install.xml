<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/nursery/db" VERSION="20200213" COMMENT="XMLDB file for local nursery plugin"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd" >
    <TABLES>
        <TABLE NAME="local_nursery" COMMENT="each record is one nursery resource">
            <FIELDS>
                <FIELD NAME="plant_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="plant_name" TYPE="text" LENGTH="10" NOTNULL="true"  SEQUENCE="false"/>
                <FIELD NAME="quantity" TYPE="text" LENGTH="10" NOTNULL="true"  SEQUENCE="false"/>
                <FIELD NAME="unit_price" TYPE="float" LENGTH="10" NOTNULL="true"  SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="plant_id"/>
            </KEYS>
        </TABLE>


    </TABLES>
</XMLDB>
